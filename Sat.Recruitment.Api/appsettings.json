{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information"
    }
  },
  "HealthChecksUI": {
    "HealthChecks": [
      {
        "Name": "Sat Challenge Api",
        "Uri": "{{BASE_API_URL}}/health"
      }
    ],
    "EvaluationTimeInSeconds": 45,
    "MinimumSecondsBetweenFailureNotifications": 150
  },
  "AllowedHosts": "*",
  "AppConfig": {
    "Api": {
      "Version": "v1",
      "Name": "SaT Recruiter Challenge Api",
      "SatApiKey": "{{Sat-Api-Key}}"
    },
    "DatabaseConfig": {
      "UsingLocalDb": "false",
      "SatDB": "{{Connection-String}}"
    },
    "CacheSetting": {
      "SlidingExpiration": 2
    },
    "JwtSettings": {
      "TokenType": "Bearer",
      "Secret": "{{Jwt-Pirvate-Key}}",
      "ValidHours": "12"
    },
    "IpRateLimit": {
      "EnableEndpointRateLimiting": true,
      "StackBlockedRequests": true,
      "RealIPHeader": "X-Real-IP",
      "ClientIdHeader": "X-ClientId",
      "HttpStatusCode": 429,
      "EndpointWhitelist": [ "get:/swagger", "*:/api/health" ],
      "ClientWhitelist": [ "dev-id-1", "dev-id-2" ],
      "GeneralRules": [
        {
          "Endpoint": "get:/api/users/*",
          "Period": "1m",
          "Limit": 5
        },
        {
          "Endpoint": "post:/api/users/*",
          "Period": "30s",
          "Limit": 3
        },
        {
          "Endpoint": "*:/api/*",
          "Period": "15m",
          "Limit": 100
        }
      ]
    }
  }
}
